<h2>Dodaj zadanie</h2>

<% if flash[:error] %>
<div><small><%= flash[:error] %></small></div>
<% end %>
<% form_for :task,
            :url => { :controller => :tasks,
                      :action => :create
                    } do |task_form| %>
                     
  <div><%= task_form.text_field :title %></div>
  <div><%= task_form.text_area :description , :cols => "60", :rows => "5" %></div>
  <% task_form.fields_for :priority do |priority_form| %>
    <%= priority_form.radio_button :id, "1" %>1
    <%= priority_form.radio_button :id, '2' %>2
    <%= priority_form.radio_button :id, "3" %>3
    <%= priority_form.radio_button :id, "4" %>4
    <%= priority_form.radio_button :id, "5" %>5
  <% end %>
  <div><%= submit_tag "zapisz" %></div>
 
<% end %>
